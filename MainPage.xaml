<Page
    x:Class="QuizCards.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuizCards"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}" ManipulationStarted="Card_ManipulationStarted" ManipulationMode="All" ManipulationCompleted="Card_ManipulationCompleted" ManipulationDelta="Card_ManipulationDelta">
        <Grid Background="White" HorizontalAlignment="Center" Height="280" Margin="0,160,0,0" VerticalAlignment="Top" Width="560" Tapped="Card_Tapped">
            <Rectangle Fill="#FFFFFF" HorizontalAlignment="Center" Height="280" Margin="0,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="560"/>
            <TextBlock x:Name="SideALabel" HorizontalAlignment="Left" Margin="114,146,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="44" RenderTransformOrigin="0.5,0.5" Width="329" FontFamily="Segoe UI Light" FontSize="36" Foreground="#FF444444" TextAlignment="Center"/>
            <TextBlock x:Name="SideBLabel"  HorizontalAlignment="Left" Margin="114,226,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="44" RenderTransformOrigin="0.5,0.5" Width="329" FontFamily="Segoe UI Light" FontSize="36" Foreground="#FF444444" TextAlignment="Center"/>
            <Image x:Name="SideAImage" HorizontalAlignment="Center" Height="138" Margin="0,5,0,0" VerticalAlignment="Top" Width="432" RenderTransformOrigin="-0.06,-0.2" />
            <ProgressRing x:Name="progring" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Button x:Name="FlipCardBtn" Content="Flip" HorizontalAlignment="Center" Height="44" Margin="613,111,605,0" VerticalAlignment="Top" RenderTransformOrigin="0.027,0.636" Click="FlipCardBtn_Click"  Visibility="Collapsed"/>
            <Button x:Name="NextCardBtn" Content="Next Card" HorizontalAlignment="Right" Height="44" Margin="0,445,508,0" VerticalAlignment="Top" Width="148" RenderTransformOrigin="0.027,0.636" Click="NextCardBtn_Click" Visibility="Collapsed"/>
        <Button x:Name="PrevCardBtn" Content="Previous Card" HorizontalAlignment="Left" Height="44" Margin="509,445,0,0" VerticalAlignment="Top" Width="148" Click="PrevCardBtn_Click"  Visibility="Collapsed"/>
        <TextBlock x:Name="DeckTitleBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="48"/>
        <Button x:Name="DeckLoad" Content="Load different deck" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Click="DeckLoad_Click"/>

    </Grid>
</Page>
